<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@drawable/splashbg"
    android:gravity="center">

    <ImageView
        android:id="@+id/kbclogo"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/kbc_logo"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:id="@+id/splash_buttons"
        android:layout_below="@+id/kbclogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's Play"
            android:textAllCaps="false"
            android:padding="5dp"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit App"
            android:textAllCaps="false"
            android:padding="5dp"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/developer_info"
        android:layout_below="@+id/splash_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed by: \nAbhishek Raghav \n(B19CSE004)"
            android:textSize="18dp"
            android:padding="5dp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/developer"
            android:padding="5dp"/>
    </LinearLayout>

</RelativeLayout>